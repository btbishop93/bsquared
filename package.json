{
  "name": "bsquared",
  "version": "0.1.0",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "dev:ssh": "bun --cwd apps/ssh dev",
    "dev:web": "bun --cwd apps/web dev",
    "build": "bun --filter '*' run build",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
